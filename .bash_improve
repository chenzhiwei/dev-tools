# Usage: Add following line to ~/.bashrc
# . $HOME/.bash_improve

# Export Vagrant environment
if [ $(uname -s) == 'Linux' ]; then
    export VAGRANT_DEFAULT_PROVIDER=libvirt
fi

# PATH
local_path=$HOME/dev/local
if [ -d $local_path ]; then
    for app in $local_path/*; do
        if [ -d $app/bin ]; then
            PATH=$PATH:$app/bin
        fi
    done
fi

# GOPATH & GOROOT
GOPATH=$local_path/gopath
GOROOT=$local_path/goroot

export PATH GOPATH GOROOT

# Command alias
alias tree='tree --charset=ascii'
alias pstree='pstree -A'

# Disable Ctrl-s and Ctrl-q
stty -ixon

# Make bash in emacs mode, this makes Bash shortcuts working
set -o emacs
